<?xml version="1.0" encoding="UTF-8"?>
<xs:schema
    xmlns="http://lazydog.org/xml/ns/historytable"
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    targetNamespace="http://lazydog.org/xml/ns/historytable"
    elementFormDefault="qualified">

    <!-- definition of simple elements -->
    <xs:element name="entity-class-name" type="xs:string"/>
    <xs:element name="entity-class-property" type="xs:string"/>
    <xs:element name="entity-class-table" type="xs:string"/>
    <xs:element name="history-table" type="xs:string"/>
    <xs:element name="history-table-column" type="xs:string"/>

    <!-- definition of attributes -->

    <!-- definition of complex elements -->
    <xs:element name="field">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="entity-class-property">
                    <xs:annotation>
                        <xs:documentation>

                            The property in the entity class to be mapped from.

                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
                <xs:element ref="history-table-column" minOccurs="0">
                    <xs:annotation>
                        <xs:documentation>

                            The column in the history table to map to.

                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="mapping">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="entity-class-name">
                    <xs:annotation>
                        <xs:documentation>

                            The entity class name.

                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
                <xs:element ref="entity-class-table" minOccurs="0">
                    <xs:annotation>
                        <xs:documentation>

                            The table for the entity class.

                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
                <xs:element ref="history-table" minOccurs="0">
                    <xs:annotation>
                        <xs:documentation>

                            The history table for the entity class.

                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
                <xs:element ref="field" maxOccurs="unbounded">
                    <xs:annotation>
                        <xs:documentation>

                            The relationship between a entity class property and
                            a history table column.

                            If no "history-table-column" is specified, the
                            "entity-class-property" will be used as the history
                            table column.

                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="mappings">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="mapping" maxOccurs="unbounded">
                    <xs:annotation>
                        <xs:documentation>

                            The relationship between a entity class and a
                            history table.

                            If no "entity-class-table" is specified, the
                            "entity-class-name" will be used as the entity class
                            table.

                            If no "history-table" is specified, the 
                            "entity-class-name" with "-history" appended will be
                            used as the history table.

                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

</xs:schema>
